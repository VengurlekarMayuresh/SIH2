# Production Environment Configuration
# Copy this file to .env and update the values for your production deployment

# Server Configuration
PORT=5001
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database-name

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars-long

# CORS Configuration - IMPORTANT: Update these for production
FRONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Example for different deployment scenarios:
# For Netlify: FRONTEND_URL=https://your-site-name.netlify.app
# For Vercel: FRONTEND_URL=https://your-app-name.vercel.app  
# For Railway: FRONTEND_URL=https://your-frontend-service.up.railway.app
# For custom domain: FRONTEND_URL=https://yourdomain.com

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Weather API Configuration
WEATHER_API_KEY=your-weatherapi-key
WEATHER_API_BASE_URL=http://api.weatherapi.com/v1